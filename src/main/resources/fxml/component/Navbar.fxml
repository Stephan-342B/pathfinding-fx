<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.mahefa.component.Menu?>

<fx:root type="javafx.scene.layout.FlowPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <HBox fx:id="title">
        <children>
            <Text fx:id="label" strokeType="OUTSIDE" strokeWidth="0.0" text="Default title">
                <font>
                    <Font name="Lato Regular" size="20.0" />
                </font>
            </Text>
        </children>
        <FlowPane.margin>
            <Insets />
        </FlowPane.margin>
        <padding>
            <Insets bottom="14.0" left="21.0" right="21.0" top="14.0" />
        </padding>
    </HBox>
    <Menu fx:id="menu_algorithms" iconLiteral="ci-caret-down" iconSize="25" maxWidth="1.7976931348623157E308" text="Algorithms" />
    <Menu fx:id="menu_mazes_patterns" iconLiteral="ci-caret-down" iconSize="25" maxWidth="1.7976931348623157E308" text="Mazes &amp; Patterns" />
    <HBox fx:id="btn_play" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="41.0" styleClass="btn-play">
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Visualize!">
                <font>
                    <Font name="Lato Regular" size="14.0" />
                </font>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Text>
        </children>
        <FlowPane.margin>
            <Insets bottom="0.0" left="20.0" right="20.0" top="0.0" />
        </FlowPane.margin>
        <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
        </padding>
        <HBox.margin>
            <Insets bottom="6.0" left="9.0" right="9.0" top="6.0" />
        </HBox.margin>
    </HBox>
    <Menu fx:id="menu_clear_board" maxWidth="1.7976931348623157E308" text="Clear Board" />
    <Menu fx:id="menu_clear_walls_weights" maxWidth="1.7976931348623157E308" text="Clear Walls &amp; Weights" />
    <Menu fx:id="menu_clear_path" maxWidth="1.7976931348623157E308" text="Clear Path" />
    <Menu fx:id="menu_speed" iconLiteral="ci-caret-down" iconSize="25" maxWidth="1.7976931348623157E308" text="Speed" />
